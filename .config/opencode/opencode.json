{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "build": {
      "permission": {
        "edit": "allow",
        "todowrite": "allow"
      }
    }
  },
  "permission": {
    "*": "ask",
    "bash": {
      "*": "ask",
      "dotnet --info": "allow",
      "dotnet *": "ask",
      "dotnet build *": "allow",
      "dotnet restore *": "allow",
      "dotnet test *": "allow",
      "gh *": "deny",
      "git *": "ask",
      "git diff *": "allow",
      "git log *": "allow",
      "git show *": "allow",
      "git status *": "allow",
      "go *": "allow",
      "go run *": "ask",
      "ls *": "ask",
      "make *": "ask",
      "make test": "allow",
      "rm *": "deny",
      "sed *": "allow",
      "strings *": "allow"
    },
    "codesearch": "allow",
    "edit": "deny",
    "glob": "allow",
    "grep": "allow",
    "list": "allow",
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.env.example": "allow"
    },
    "task": "allow",
    "todoread": "allow",
    "webfetch": "allow",
    "websearch": "allow"
  }
}
